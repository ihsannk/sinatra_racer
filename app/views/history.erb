<div class="container">
  
  <h1> Racer History!</h1>
  <h3> Hall of Fame </h3>
 
 <table style="width:100%">

  <tr>
    <td> Game No.</td>
    <td> Winner </td>
    <td> Runner Up </td>
    <td> Time </td>
  </tr>
  <% @game.each do |t| %>
  <tr>
    <td> <%= t.id %> </td>
    <td> <%= Player.find(t.winner_id).name %> </td>
    <td> <%= Player.find(t.loser_id).name %> </td>
    <td> <%= t.duration.round(3)%> sec</td> 
  </tr>
  <% end %>
  </table> 

</div>